{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Next.js",
  "extends": "./base.json",
  "compilerOptions": {
    "plugins": [{ "name": "next" }],
    "skipLibCheck": true,
    "module": "ESNext",
    "incremental": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "allowJs": true,
    "jsx": "preserve",
    "noEmit": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
